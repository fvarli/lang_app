      "id": "grammar_a1_be_1",
      "unitId": "unit_grammar_a1_basics",
      "module": "grammar",
      "level": "a1",
      "title": "Verb To Be",
      "explanationMarkdown": "Use **am** with I, **is** with he/she/it, and **are** with you/we/they.",
      "examples": [
        "I am a student.",
        "She is at home.",
        "They are friends."
      ],
      "questions": [
        {
          "id": "g1_q1",
          "type": "mcq",
          "prompt": "Choose the correct sentence.",
          "options": ["She are happy.", "She is happy.", "She am happy."],
          "correctIndex": 1
        },
        {
          "id": "g1_q2",
          "type": "true_false",
          "prompt": "'I are ready' is correct.",
          "options": ["True", "False"],
          "correctIndex": 1
        }
      ]
    },
